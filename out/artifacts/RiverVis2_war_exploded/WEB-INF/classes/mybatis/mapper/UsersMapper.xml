<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UsersMapper">
	<!--表名 -->
	<sql id="usersTable">
		users
	</sql>
	<sql id="roleTable">
		role
	</sql>
	<sql id="areaTable">
		area
	</sql>
	<sql id="Field">
		userid,
	usertypes,
	loginid,
	password,
	username,
	usex,
	linktel,
	uemail,
	qq,
	ucardid,
	linkaddr,
	note,
	aid,
	roleid,
	isuse,
	lastdate,
	type
	</sql>
	<!-- 判断用户名和密码 -->
	<select id="getUserInfo" parameterType="pd" resultType="Users">
		SELECT ui.userid as userid,
				username,
				usertypes,
				loginid,
				password,
				roleid,
				linktel,
				linkaddr,
				isuse,
				lastdate,
				ui.note as note,
				ui.aid as aid,
				rname,
				aname,
				roletype,
				menurights,
				buttonrights
		from (<include refid="usersTable"/> ui 
		LEFT JOIN <include refid="roleTable"/> r on ui.roleid = r.rid)
		LEFT JOIN <include refid="areaTable"/> a on ui.aid = a.aid
		<where>
			<if test="username!=null and password!=null">
			and loginid = #{username} and PassWord=#{password} and isuse=1
			</if>
		</where>
	</select>
	
	<!-- 获取系统管理账号列表(分页) -->
	<select id="getUserslistPage" parameterType="page" resultType="Users" >
		SELECT ui.userid as userid,
				username,
				usertypes,
				loginid,
				password,
				roleid,
				linktel,
				linkaddr,
				isuse,
				lastdate,
				ui.note as note,
				ui.aid as aid,
				rname,
				aname,
				roletype,
				menurights,
				buttonrights
		from (<include refid="usersTable"/> ui 
		LEFT JOIN <include refid="roleTable"/> r on ui.roleid = r.rid)
		LEFT JOIN <include refid="areaTable"/> a on ui.aid = a.aid
		<where>
			<if test="pd.unamekey != null and pd.unamekey != ''">
				and username LIKE CONCAT(CONCAT('%', #{pd.unamekey}),'%')
			</if> 
			<if test="pd.isusekey != null and pd.isusekey != ''">
				and isuse =#{pd.isusekey}
			</if> 
			and type=0
		</where> 
	</select>
	<!-- 获取系统终端管理用户列表(分页) -->
	<select id="getUserInfolistPage" parameterType="page" resultType="Users" >
		SELECT ui.userid as userid,
				usertypes,
				loginid,
				password,
				username,
				usex,
				linktel,
				uemail,
				qq,
				ucardid,
				linkaddr,
				ui.note as note,
				ui.aid as aid,
				roleid,
				isuse,
				lastdate,
				type,
				rname,
				aname,
				roletype,
				menurights,
				buttonrights
		from (<include refid="usersTable"/> ui 
		LEFT JOIN <include refid="roleTable"/> r on ui.roleid = r.rid)
		LEFT JOIN <include refid="areaTable"/> a on ui.aid = a.aid
		<where>
			<choose>
				<when test="pd.aidlist!=null and pd.aidlist!='' and pd.aidlist.size>0">
					and ui.aid in 
					<foreach collection="pd.aidlist" index="index" item="item" open="(" separator="," close=")">
			            ${item}
			        </foreach>
			        or 	ui.aid is null
				</when>
				<otherwise>and ui.aid is null</otherwise>
			</choose>
			<if test="pd.unamekey != null and pd.unamekey != ''">
				and username LIKE CONCAT(CONCAT('%', #{pd.unamekey}),'%')
			</if> 
			<if test="pd.isusekey != null and pd.isusekey != ''">
				and isuse =#{pd.isusekey}
			</if>
			and type=1
		</where> 
	</select>
	<!-- 获取系统终端管理用户列表(不分页) -->
	<select id="getAllUserInfoList" parameterType="pd" resultType="Users" >
		SELECT ui.userid as userid,
				usertypes,
				loginid,
				password,
				username,
				usex,
				linktel,
				uemail,
				qq,
				ucardid,
				linkaddr,
