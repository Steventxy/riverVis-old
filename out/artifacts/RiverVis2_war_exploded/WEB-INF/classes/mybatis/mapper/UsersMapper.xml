		where userid = #{userid}
	</delete>
	<select id="getUserByAidlist" parameterType="pd" resultType="pd" >
		SELECT u.userid as userid,
				usertypes,
				loginid,
				password,
				username,
				usex,
				linktel,
				uemail,
				qq,
				ucardid,
				linkaddr,
